{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "files.exclude": {
    ".cache/": true,
    "node_modules/": true,
    "build/": true,
    "extensions": true,
    "hocus-workspace": true
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "remote.SSH.defaultForwardedPorts": [
    {
      "localPort": 3000,
      "name": "app",
      "remotePort": 3000
    },
    {
      "localPort": 8002,
      "name": "app-remix-dev-ws",
      "remotePort": 8002
    },
    {
      "localPort": 4200,
      "name": "keycloak",
      "remotePort": 4200
    },
    {
      "localPort": 5432,
      "name": "postgres",
      "remotePort": 5432
    },
    {
      "localPort": 6432,
      "name": "temporal-postgres",
      "remotePort": 6432
    },
    {
      "localPort": 8080,
      "name": "temporal-ui",
      "remotePort": 8080
    },
    {
      "localPort": 8822,
      "name": "hocus-agent-ssh",
      "remotePort": 8822
    }
  ],
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": ".*",
        "cmd": "ops/bin/rsync.sh"
      }
    ]
  },
  "excalidraw.theme": "dark",
  "typescript.tsdk": "./node_modules/typescript/lib",
  "ltex.enabled": [
    "bash",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "markdown",
    "restructuredtext",
  ]
}